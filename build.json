    },
    {
      "id": "repository.loop",
      "filename": "repository.loop/repository.loop.zip",
      "addons": ["plugin.video.the-loop"]
    }
  ],
  "direct_zips": [
    "plugin.video.fenlight/plugin.video.fenlight.zip",
    "script.skin.mackodi.helper/script.skin.mackodi.helper-1.0.0.zip",
