<?xml version="1.0" encoding="UTF-8"?>
<addons>
	<addon id="repository.mackodi" name="Mackodi Repository" version="1.0.0" provider-name="Mackodi">
		<extension point="xbmc.addon.repository" name="Mackodi Repository">
			<info compressed="false">https://mcdonald-conor.github.io/mackodi/repo/addons.xml</info>
			<checksum>https://mcdonald-conor.github.io/mackodi/repo/addons.xml.md5</checksum>
			<datadir zip="true">https://mcdonald-conor.github.io/mackodi/repo/zips/</datadir>
		</extension>
		<extension point="xbmc.addon.metadata">
			<summary lang="en_GB">Mackodi add-on repository</summary>
			<description lang="en_GB">Repository for the Mackodi installer and skin.</description>
			<platform>all</platform>
		</extension>
	</addon>

	<addon id="plugin.program.mackodi.installer" name="Mackodi Installer" version="0.0.2" provider-name="Mackodi">
		<requires>
			<import addon="xbmc.python" version="3.0.0"/>
		</requires>
		<extension point="xbmc.python.script" library="default.py">
			<provides>executable</provides>
		</extension>
		<extension point="xbmc.addon.metadata">
			<summary lang="en_GB">Installs the Mackodi configuration</summary>
			<description lang="en_GB">A lightweight installer for the Mackodi build. Sets up advancedsettings.xml and required repositories.</description>
			<platform>all</platform>
		</extension>
	</addon>

	<addon id="script.skin.mackodi.helper" name="Mackodi Skin Helper" version="1.0.0" provider-name="Mackodi">
		<requires>
			<import addon="xbmc.python" version="3.0.0"/>
		</requires>
		<extension point="xbmc.python.script" library="default.py">
			<provides>executable</provides>
		</extension>
		<extension point="xbmc.addon.metadata">
			<summary lang="en_GB">Helper script for Mackodi skin</summary>
			<description lang="en_GB">Handles add-on launching with fallback support and admin functions for the Mackodi skin.</description>
			<platform>all</platform>
		</extension>
	</addon>

	<addon id="skin.mackodi" version="1.0.0" name="Mackodi" provider-name="Mackodi">
		<requires>
			<import addon="xbmc.gui" version="5.17.0"/>
			<import addon="script.skin.mackodi.helper" version="1.0.0"/>
		</requires>
		<extension point="xbmc.gui.skin" debugging="false">
			<res width="1920" height="1440" aspect="4:3" default="false" folder="xml" />
			<res width="1920" height="1280" aspect="3:2" default="false" folder="xml" />
			<res width="1920" height="1200" aspect="16:10" default="false" folder="xml" />
			<res width="2040" height="1080" aspect="17:9" default="false" folder="xml" />
			<res width="1920" height="1080" aspect="16:9" default="true" folder="xml" />
			<res width="2560" height="1080" aspect="21:9" default="false" folder="xml" />
			<res width="2338" height="1080" aspect="19.5:9" default="false" folder="xml" />
			<res width="2160" height="1080" aspect="18:9" default="false" folder="xml" />
		</extension>
		<extension point="xbmc.addon.metadata">
			<platform>all</platform>
			<license>GPL-2.0-or-later</license>
			<forum>https://github.com/mcdonald-conor/mackodi</forum>
			<source>https://github.com/mcdonald-conor/mackodi</source>
			<assets>
				<icon>resources/icon.png</icon>
				<fanart>resources/fanart.jpg</fanart>
			</assets>
			<summary lang="en_GB">Mackodi - A fast, clean launcher skin for Kodi Omega</summary>
			<description lang="en_GB">Mackodi is a minimal, performance-first skin designed for Amazon Firestick and Android TV devices. Features a simple 5-tile home screen (Movies, TV Shows, Sport, YouTube, Settings) with direct add-on launching. Dark theme, no bloat, family-friendly.</description>
			<disclaimer lang="en_GB">Mackodi is based on Estuary. Optimized for low-RAM devices.</disclaimer>
		</extension>
	</addon>
</addons>
